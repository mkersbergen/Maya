<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>87275</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.label:Trakt</define> 
  <controls>
  
    <import>Trakt.Common.Background.xml</import>		
    <import>common.time.xml</import>

    <control>
      <id>1</id>
      <type>label</type>
      <description>Header label</description>
      <posX>185</posX>
      <posY>28</posY>
      <width>500</width>
      <label>#header.label</label>	  
      <font>Segoe Light22</font>
      <textcolor>ff6aa5cb</textcolor>
      <animation effect="Fade" time="200">WindowOpen</animation>
      <animation effect="Fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>780</posX>
      <posY>199</posY>
      <width>931</width>
      <label>#selecteditem</label>
      <font>Segoe Light22</font>
      <visible>facadeview.list+control.isvisible(50)</visible>
      <animation effect="fade" time="100">WindowOpen</animation>
      <animation effect="fade" time="100">WindowClose</animation>
      <valign>middle</valign>
    </control>

	
    <control>
		<description>listcontrol background</description>
		<type>image</type>
		<id>1</id>
		<posX>736</posX>
		<posY>243</posY>
		<width>1019</width>
		<height>788</height>
		<texture>listcontrol_bg_recordings.png</texture>
		<visible>facadeview.list+control.isvisible(50)</visible>
		<animation effect="fade" time="100">WindowOpen</animation>
		<animation effect="fade" time="100">WindowClose</animation>
    </control>
	
	
		<control>
			<description>group element</description>
			<type>group</type>
    		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
    		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
			<control>
				<type>facadeview</type>
				<id>50</id>
				<control>
					<description>Movielist</description>					
					<type>listcontrol</type>
					<id>50</id>
					<onleft>2</onleft>
					<onright>50</onright>
					<scrollOffset>1</scrollOffset>
					<posY>678</posY>
					<height>337</height>
					<posX>736</posX>
					<width>1017</width>
					<spinPosX>787</spinPosX>
					<spinPosY>973</spinPosY>
					<spinAlign>left</spinAlign>
					<textXOff>30</textXOff>
					<spinCanFocus>no</spinCanFocus>
        </control>
	  
	</control>
</control>

	<control>
		<description>Summary</description>
		<type>textboxscrollup</type>
		<id>0</id>
		<posX>780</posX>
		<posY>500</posY>
		<width>931</width>
		<height>150</height>
		<seperator>-----------------------------------------------------------------------------------</seperator>
    <label>#Trakt.List.Description</label>
    <visible>!string.equals(#Trakt.List.Description,N/A)</visible>
    <animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
    <animation effect="fade" start="0" end="100" time="300" delay="350" reversible="false">visible</animation>
	</control>
		
		<import>common.overlay.xml</import>
		
	</controls>
</window>