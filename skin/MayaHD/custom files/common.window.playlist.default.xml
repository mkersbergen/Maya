<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
    </control>
	
    <control>
      <description>Alternate BG</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>background_thumbs.png</texture>
      <visible>facadeview.smallicons | facadeview.largeicons</visible>
    </control>
	
    <control>
      <description>Fanart Background</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#header.background</texture>
      <visible>string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Fanart Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>basichome_fanart_overlay.png</texture>
      <visible>[!facadeview.smallicons+!facadeview.largeicons+!facadeview.filmstrip]+string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Fanart Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>fanart_overlay_thumbs.png</texture>
      <visible>[facadeview.smallicons|facadeview.largeicons|facadeview.filmstrip]+string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>778</posX>
      <posY>169</posY>
      <width>931</width>
      <label>#selecteditem</label>
      <font>Segoe Light22</font>
      <visible>[!facadeview.smallicons+!facadeview.largeicons+!facadeview.filmstrip]+!control.isvisible(53)</visible>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>1709</posX>
      <posY>970</posY>
      <align>right</align>
      <label>#currentmodule: #itemcount</label>
      <textcolor>6aa5cb</textcolor>
      <visible>[!facadeview.smallicons+!facadeview.largeicons+!facadeview.filmstrip]+Control.IsVisible(50)</visible>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>0</posX>
      <posY>250</posY>
      <width>1920</width>
      <align>center</align>
      <label>#currentmodule: #itemcount</label>
      <textcolor>6aa5cb</textcolor>
      <visible>facadeview.filmstrip|facadeview.smallicons|facadeview.largeicons|facadeview.coverflow</visible>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
	
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>0</posX>
      <posY>169</posY>
      <width>1920</width>
      <label>#selecteditem</label>
      <font>Segoe Light22</font>
      <align>center</align>
      <visible>[facadeview.filmstrip|facadeview.smallicons|facadeview.largeicons|facadeview.coverflow]+!control.isvisible(53)</visible>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
	
  </controls>
</window>