<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
  
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
      <visible>!string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Alternate BG</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>background_thumbs.png</texture>
      <visible>[facadeview.smallicons|facadeview.largeicons]+Control.IsVisible(50)</visible>
    </control>
	
    <control>
      <description>Alternate BG</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>background_filmstrip.png</texture>
      <visible>[facadeview.filmstrip|facadeview.coverflow]+Control.IsVisible(50)</visible>
    </control>
	
    <control>
      <description>Fanart Background</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#header.background</texture>
      <visible>string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Fanart Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>basichome_fanart_overlay.png</texture>
      <visible>string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
    <control>
      <description>Fanart Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>fanart_overlay_thumbs.png</texture>
      <visible>[facadeview.smallicons|facadeview.largeicons|facadeview.filmstrip]+string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
	
  </controls>
</window>